library(mvtnorm)
library(coda)
knitr::opts_chunk$set(fig.align = 'center')
# Gibbs sampling
# Initial data
T <- 1000
X <- 0
Y <- 0
Z <- 0
M <- matrix(nrow = T, ncol = 3)
M[1,] <- c(X,Y,Z)
# Gibbs algorithm
for(i in 2:T){
X <- rnorm(1, (89/99)*Y+(1/99)*Z, sqrt(94/495))
Y <- rnorm(1, (89/99)*X+(1/99)*Z, sqrt(94/495))
Z <- rnorm(1, (1/19)*(X+Y), sqrt(94/495))
M[i,] <- c(X,Y,Z)
}
# Trace plot
plot(M[,1], type = "l", ylab=expression(X), main = expression("Trace plot for" ~ X))
# Autocorrelation plot
autocorr.plot(M[,1], main = expression("Autocorrelation plot for" ~ X), auto.layout = F)
